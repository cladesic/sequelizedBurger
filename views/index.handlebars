<h1>Burgers!</h1>
<div class="container">
<h2>Burgers Are Ready!</h2>


  {{#each burger}}
  {{#unless devoured}}
  {{> burgers/burger-block devoured=false}} 
  {{/unless}}
  {{/each}}


<h2>Burgers that are devoured!</h2>


  {{#each burger}}
    {{#if devoured}}
        <li>{{this.burger_name}}</li>
    
    {{/if}}
  {{/each}}


<h2>Order a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">

    <br>
  </div>


  <button type="submit">Add Burger</button>
</form>
</div>